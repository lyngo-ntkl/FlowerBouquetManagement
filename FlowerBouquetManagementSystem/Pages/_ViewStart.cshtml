@*@{
    Layout = "_Layout";
}*@
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    } else if (User.IsInRole("User"))
    {
        Layout = "~/Pages/Shared/_UserLayout.cshtml";
    }
} else
{
    Layout = "_Layout";
}
