@page
@model FlowerBouquetManagementSystemWebApp.Pages.User.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Flower Bouquets</h1>
<form>
    <label for="name">Name</label>
    <input type="search" name="name"/>
    <label for="categoryId">Category</label>
    <select name="categoryId" asp-items="ViewBag.Categories"></select>
    <button type="submit">Search</button>
</form>

<p>
    <a asp-page="Admin/FlowerBouquetCRUD/Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Flower bouquet name</th>
            <th>Description</th>
            <th>Unit price</th>
            <th>Units in stock</th>
            <th>Status</th>
            <th>Category</th>
            <th>Supplier</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="flowerTable">
    </tbody>
</table>
